<h2><%=@post.title %></h2>
<p class="text-right"><%=User.find_by(id: @post.user_id).display_name %></p>
<%= simple_format @post.body %>

<h3>Comments</h3>
<% if @post.comments.any? %>
<ul>
    <% @post.comments.each do |comment| %>
        <li><%= comment.body %></li>
    <%end%>
</ul>
<% end %>
<%= form_for [@post, @post.comments.build] do |f| %>
<p>
    <%= f.text_field :body %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>